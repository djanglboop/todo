<p id="notice"><%= notice %></p>

<h1>My To Do List</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Need to do</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>

      <% if list.completed %>
        <tr class="table-secondary">
          <td><%= list.description %></td>
          <td>
            <%= link_to 'Show', list %>
            <%= link_to 'Edit', edit_list_path(list) %>
            <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% else %>
        <tr>
          <td><%= list.description %></td>
          <td>
            <%= link_to 'Show', list %>
            <%= link_to 'Edit', edit_list_path(list) %>
            <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Todo Item', new_list_path, class: "btn btn-primary" %>
